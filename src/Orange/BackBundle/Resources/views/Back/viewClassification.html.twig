{% extends "OrangeCoreBundle::layout.html.twig" %}

{% block title %}Admin - DCR{% endblock %}

{% block content %}
    <div class="container">
        <div class="starter-template">
            <h2 style="text-align : center;">Classifications</h2>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="row">
                        <div class="col-md-3 col-md-offset-9">
                            <a href="{{ path('_classification_create') }}" class="btn btn-default" style="margin-bottom: 20px;"><i class="icon-plus-sign-alt"></i> Nouvelle classification</a>
                        </div>
                    </div>
                    <table id="all-table" class="table table-hover table-bordered table-stripped">
                        <thead>
                        <tr>
                            <th>Identifiant</th>
                            <th>Libell√©</th>
                            <th>Route</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in class %}
                            <tr>
                                <td>{{ c.id }}</td>
                                <td>{{ c.libelle }}</td>
                                <td>{{ c.route }}</td>
                                <td><a href="{{ path('_classification_update', {'id': c.id}) }}"><i class="fa fa-fw fa-pencil"></i></a> <a href="{{ path('_classification_delete', {'id': c.id}) }}"><i class="fa fa-fw fa-trash"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}