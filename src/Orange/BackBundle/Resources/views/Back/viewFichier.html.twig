{% extends "OrangeCoreBundle::layout.html.twig" %}

{% block title %}Admin - DCR{% endblock %}

{% block content %}
    <div class="container">
        <div class="starter-template">
            <h2>Fichiers</h2>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                	<div class="row">
                        <div class="col-md-3">
                            <a class="btn btn-primary" href="{{ path('_back') }}" role="button" style="margin-left: 12px;"><i class="icon-circle-arrow-left"></i> Retour</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 col-md-offset-9">
                            <a href="{{ path('_fichier_create') }}" class="btn btn-default" style="margin-bottom: 20px;"><i class="icon-plus-sign-alt"></i> Nouveau fichier</a>
                        </div>
                    </div>
                    <table id="cat_table" class="table table-hover table-bordered table-stripped">
                        <thead>
                        <tr>
                            <th>Identifiant</th>
                            <th>Libell√©</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for f in file %}
                            <tr>
                                <td>{{ f.id }}</td>
                                <td>{{ f.nom }}</td>
                                <td>{{ f.date|date("d/m/Y") }}</td>
                                <td><a href="{{ path('_fichier_update', {'id': f.id}) }}"><i class="icon-pencil"></i></a> <a href="{{ path('_fichier_delete', {'id': f.id}) }}"><i class="icon-trash"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}